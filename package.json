{
  "name": "react-imported-component",
  "version": "6.2.1",
  "description": "I will import your component, and help to handle it",
  "main": "dist/es5/index.js",
  "jsnext:main": "dist/es2015/index.js",
  "module": "dist/es2015/index.js",
  "sideEffects": false,
  "types": "dist/es5/index.d.ts",
  "scripts": {
    "build": "lib-builder build && yarn size:report",
    "test": "jest",
    "prepublish": "npm run build",
    "lint": "lib-builder lint",
    "dev": "lib-builder dev",
    "test:ci": "jest --runInBand --coverage",
    "release": "yarn build && yarn test",
    "format": "lib-builder format",
    "size": "npx size-limit",
    "size:report": "npx size-limit --json > .size.json",
    "update": "lib-builder update",
    "docz:dev": "docz dev",
    "docz:build": "docz build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/theKashey/react-hot-component-loader.git"
  },
  "bin": {
    "imported-components": "./bin/imported-components"
  },
  "keywords": [
    "react-hot-loader",
    "loader",
    "import",
    "async",
    "ssr",
    "code splitting",
    "hmr"
  ],
  "peerDependencies": {
    "react": "^16.9.0",
    "@types/react": "^16.9.0"
  },
  "author": "theKashey <thekashey@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/theKashey/react-hot-component-loader/issues"
  },
  "homepage": "https://github.com/theKashey/react-hot-component-loader#readme",
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/runtime": "^7.3.1",
    "@size-limit/preset-small-lib": "^2.1.1",
    "@theuiteam/lib-builder": "0.0.8",
    "@types/detect-node": "^2.0.0",
    "@types/enzyme": "^3.10.3",
    "@types/node": "^12.12.6",
    "@types/react-dom": "^16.9.4",
    "babel-plugin-dynamic-import-node": "^2.3.0",
    "babel-plugin-tester": "^7.0.1",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "prettier": "^1.18.2",
    "react-test-renderer": "^16.6.0",
    "sinon": "^5.0.10"
  },
  "dependencies": {
    "babel-plugin-macros": "^2.6.1",
    "crc-32": "^1.2.0",
    "detect-node": "^2.0.4",
    "scan-directory": "^2.0.0",
    "tslib": "^1.10.0"
  },
  "engines": {
    "node": ">=8.5.0"
  },
  "files": [
    "bin",
    "dist",
    "boot",
    "server",
    "macro",
    "babel.js"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ],
    "*.{js,css,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  }
}
